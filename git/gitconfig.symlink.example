[user]
	name = AUTHORNAME
	email = AUTHOREMAIL 
[credential]
	helper = GIT_CREDENTIAL_HELPER
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[alias]
	serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
