[user]
	name = AUTHORNAME
	email = AUTHOREMAIL 
	signingkey = 908BD3E6BF0D4F26
[credential]
	helper = GIT_CREDENTIAL_HELPER
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[alias]
        serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
[commit]
	gpgsign = true
[gpg]
	program = gpg2
